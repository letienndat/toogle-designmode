{
  "manifest_version": 3,
  "name": "Toggle Design Mode",
  "version": "1.0",
  "description": "On/Off document.designMode with 1 click",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_icon": {
      "16": "icons/off-16.png",
      "32": "icons/off-32.png",
      "48": "icons/off-48.png",
      "128": "icons/off-128.png"
    },
    "default_title": "Toggle Design Mode"
  },
  "background": {
    "service_worker": "background.js"
  }
}